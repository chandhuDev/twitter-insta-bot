{
  "manifest_version": 3,
  "name": "Twitter to Instagram",
  "version": "2.0",
  "permissions": [
    "activeTab",
    "clipboardRead",
    "scripting"
  ],
  "host_permissions": [
    "https://x.com/*",
    "http://localhost:4000/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://x.com/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}
